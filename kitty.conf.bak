# vim:ft=kitty

font_family       JetBrains Mono
bold_font         auto
bold_italic_font  auto
italic_font       auto
font_size         14.0

# modify_font       cell_height 1.2
# cursor_shape      block
# shell_integration no_cursor

clipboard_control write-clipboard write-primary read-clipboard-ask read-primary-ask no-append

map cmd+shift+t kitten launch --type=overlay sh -c './tab-name.sh && tmux'

# for set-colors
allow_remote_control yes

# include font-fixes.conf
include current-theme.conf

# BEGIN_KITTY_THEME
# Catppuccin-Frappe
include current-theme.conf
# END_KITTY_THEME
